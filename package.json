{
  "name": "speak",
  "version": "0.1.0",
  "description": "Open source voice dictation for everyone",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "electron src/main.js",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "lint": "eslint src/**/*.js",
    "test": "jest"
  },
  "keywords": [
    "voice-dictation",
    "speech-to-text",
    "openai-whisper",
    "electron",
    "cross-platform",
    "privacy-first"
  ],
  "author": "Speak Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/speak.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/speak/issues"
  },
  "homepage": "https://github.com/yourusername/speak#readme",
  "dependencies": {
    "openai": "^4.20.1",
    "electron-store": "^8.1.1",
    "robotjs": "^0.6.0",
    "node-record-lpcm16": "^1.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/robotjs": "^0.5.4",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.speak.dictation",
    "productName": "Speak",
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}