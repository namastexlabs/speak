{
  "name": "@namastexlabs/speak",
  "version": "0.1.0-rc.61",
  "description": "Open source voice dictation for everyone",
  "main": "src/main.js",
  "bin": {
    "speak": "./bin/speak.js"
  },
  "scripts": {
    "start": "electron src/main.js",
    "dev": "NODE_ENV=development electron src/main.js",
    "build:css": "npx @tailwindcss/cli -i src/renderer/styles.css -o src/renderer/styles.built.css",
    "watch:css": "npx @tailwindcss/cli -i src/renderer/styles.css -o src/renderer/styles.built.css --watch",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "lint": "eslint src/**/*.js",
    "test": "jest",
    "postinstall": "node -e \"console.log('Skipping electron-builder install-app-deps - native deps rebuild at build time')\"",
    "prepublishOnly": "node scripts/generate-icons.js",
    "generate-icons": "node scripts/generate-icons.js",
    "check-deps": "node scripts/check-deps.js",
    "validate": "pnpm run check-deps && pnpm run lint"
  },
  "packageManager": "pnpm@10.19.0",
  "keywords": [
    "voice-dictation",
    "speech-to-text",
    "openai-whisper",
    "electron",
    "cross-platform",
    "privacy-first"
  ],
  "author": "Namastex Labs <hello@namastex.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/namastexlabs/speak.git"
  },
  "bugs": {
    "url": "https://github.com/namastexlabs/speak/issues"
  },
  "homepage": "https://github.com/namastexlabs/speak#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "lucide-static": "^0.546.0",
    "node-global-key-listener": "^0.3.0",
    "openai": "^4.20.1",
    "uiohook-napi": "^1.5.4",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@tailwindcss/cli": "^4.1.15",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "daisyui": "^5.3.8",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.speak.dictation",
    "productName": "Speak",
    "npmRebuild": false,
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "scripts/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "sign": null,
      "icon": "assets/icons/app-icon.png"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
