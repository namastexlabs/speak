# Speak - Environment Configuration
# Copy this file to .env and customize for your setup

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Selection
# Available options:
# - gpt-4o-transcribe (default, high quality)
# - gpt-4o-mini-transcribe (faster, cheaper)  
# - gpt-4o-transcribe-diarize (meeting mode, speaker identification)
OPENAI_MODEL=gpt-4o-transcribe

# Development Settings
NODE_ENV=development

# Logging Level
# Options: error, warn, info, debug
LOG_LEVEL=info

# Audio Settings
# Audio sample rate for recording (Hz)
AUDIO_SAMPLE_RATE=16000

# Audio channels (1=mono, 2=stereo)
AUDIO_CHANNELS=1

# Temporary directory for audio files
# Leave empty to use system default
TEMP_DIR=

# Hotkey Configuration
# Format: modifier+key (e.g., ctrl+shift+space, cmd+shift+space)
# Available modifiers: ctrl, alt, shift, cmd, super
# Available keys: space, a-z, 0-9, f1-f12
HOTKEY=ctrl+shift+space

# Language Settings
# Auto-detect language or specify ISO 639-1 code
# Examples: en, es, fr, de, it, pt, ru, ja, ko, zh
# Leave empty for auto-detection
LANGUAGE=

# Application Settings
# Enable/disable features
ENABLE_TELEMETRY=false
ENABLE_AUTO_UPDATE=true
ENABLE_CRASH_REPORTING=true

# Performance Settings
# Maximum recording duration in seconds (0 = unlimited)
MAX_RECORDING_DURATION=300

# Transcription timeout in seconds
TRANSCRIPTION_TIMEOUT=30

# Advanced Settings
# Custom OpenAI API endpoint (for enterprise or proxy)
OPENAI_API_BASE_URL=

# Request timeout in milliseconds
REQUEST_TIMEOUT=60000

# Retry attempts for failed requests
MAX_RETRIES=3

# Debug Settings
# Enable debug logging
DEBUG=false

# Enable development tools in Electron
DEV_TOOLS=false

# Proxy Settings (if needed)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# Platform-specific overrides
# macOS specific
MACOS_MICROPHONE_PERMISSION=auto

# Windows specific  
WINDOWS_AUDIO_DEVICE=default

# Linux specific
LINUX_AUDIO_DRIVER=pulseaudio